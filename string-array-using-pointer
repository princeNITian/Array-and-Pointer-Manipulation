#include <stdio.h>
void print(char* C)
{
   int i = 0;
   while(C[i]!='\0')
   {
    printf("%c",C[i]);
    i++;
}
printf("\n");
}
int main()
{
char C[20] ="Hello";
print(C);
}

/*This is the same code that above is.*/

